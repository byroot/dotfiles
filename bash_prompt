# Eye candies
LRED="\[\033[1;31m\]"
GREEN="\[\033[0;32m\]"
YELOW="\[\033[0;33m\]"
LYELOW="\[\033[1;33m\]"
LBLUE="\[\033[1;34m\]"
PURP="\[\033[0;35m\]"
CYAN="\[\033[1;36m\]"
GREY="\[\033[0;37m\]"
NORM="\[\033[0m\]"

function get_branch() {
    git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

PS1="$YELOW\u$GREY@$LRED\h$GREY:$LBLUE\W$GREY:$LYELOW\$(get_branch)$LRED$ $NORM"
